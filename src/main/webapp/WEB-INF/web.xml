<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Pirate Supply Chain</display-name>

    <!-- servlets -->
	<servlet>
		<servlet-name>PirateController</servlet-name>
		<display-name>PirateController</display-name>
		<servlet-class>com.revature.controllers.PirateController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProductController</servlet-name>
		<display-name>ProductController</display-name>
		<servlet-class>com.revature.controllers.ProductController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeController</servlet-name>
		<display-name>HomeController</display-name>
		<servlet-class>com.revature.controllers.HomeController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LocationController</servlet-name>
		<display-name>LocationController</display-name>
		<servlet-class>com.revature.controllers.LocationController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SignupController</servlet-name>
		<display-name>SignupController</display-name>
		<servlet-class>com.revature.controllers.SignupController</servlet-class>
	</servlet>
	
	


	<!-- end points -->

	<servlet-mapping>

		<servlet-name>HomeController</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>

		<servlet-name>ProductController</servlet-name>
		<url-pattern>/products</url-pattern>
	</servlet-mapping>
	<servlet-mapping>

		<servlet-name>PirateController</servlet-name>
		<url-pattern>/pirates</url-pattern>
	</servlet-mapping>
	<servlet-mapping>

		<servlet-name>LocationController</servlet-name>
		<url-pattern>/stores</url-pattern>
		
	</servlet-mapping>
	<servlet-mapping>

		<servlet-name>SignupController</servlet-name>
		<url-pattern>/register</url-pattern>
		
	</servlet-mapping>
	

</web-app>